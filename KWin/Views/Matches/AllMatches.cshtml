
@model KWin.Models.Matches.MatchesViewModel



@{
    ViewData["Title"] = "AllMatches";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="d-flex justify-content-between">
    <table class="table table-hover table-bordered">
        <tbody>
            <tr class="row">

                <th scope="row" class="col-lg-4 d-flex justify-content-center"><h5>First team</h5></th>
                <th scope="row" class="col-lg-4 d-flex justify-content-center"><h5>Second team</h5></th>
                <th scope="row" class="col-lg-3 d-flex justify-content-center"><h5>Starting time</h5></th>
                @for (int i = 0; i < @Model.matches.Count; i++)
                {
                    <td class="col-lg-4 d-flex justify-content-center"><h5>@Model.matches[i].FirstTeamName</h5></td>
                    <td class="col-lg-4 d-flex justify-content-center"><h5>@Model.matches[i].SecondTeamName</h5></td>
                    <td class="col-lg-3 d-flex justify-content-center"><h5>@Model.matches[i].StartingTime</h5></td>
                }
            </tr>

        </tbody>
    </table>
</div>
