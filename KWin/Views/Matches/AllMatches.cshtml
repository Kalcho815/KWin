
@model KWin.Models.Matches.MatchesViewModel

 

@{
    ViewData["Title"] = "AllMatches";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

    <div class="d-flex justify-content-between">
        <table class="table table-hover table-bordered">
            
            <tbody>
                @for (int i = 0; i < @Model.matches.Count; i++)
                {
                    <tr class="row">
                        <th scope="row" class="col-lg-1 d-flex justify-content-center"><h5>@(i + 1)</h5></th>
                        <td class="col-lg-4 d-flex justify-content-center"><h5>@Model.matches[i].FirstTeamName</h5></td>
                        <td class="col-lg-1 d-flex justify-content-center"><h5>@Model.matches[i].SecondTeamName</h5></td>
                        <td class="col-lg-3 d-flex justify-content-center"><h5>@Model.matches[i].StartingTime</h5></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
