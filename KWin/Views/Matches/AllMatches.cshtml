
@model KWin.Models.Matches.MatchesViewModel



@{
    ViewData["Title"] = "AllMatches";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="d-flex justify-content-between">
    <table class="table table-hover table-bordered">
        <tbody>
            <tr class="row">

                <th scope="row" class="col-lg-4 d-flex justify-content-center table-secondary"><h5>First team</h5></th>
                <th scope="row" class="col-lg-4 d-flex justify-content-center table-secondary"><h5>Second team</h5></th>
                <th scope="row" class="col-lg-4 d-flex justify-content-center table-secondary"><h5>Starting time</h5></th>
                @for (int i = 0; i < @Model.matches.Count; i++)
                {
                    <td class="col-lg-4 d-flex justify-content-center font-weight-bold">
                        @Model.matches[i].FirstTeamName
                    </td>
                    <td class="col-lg-4 d-flex justify-content-center font-weight-bold">
                        @Model.matches[i].SecondTeamName
                    </td>
                    <td class="col-lg-4 d-flex justify-content-center font-weight-bold">
                        @Model.matches[i].StartingTime.ToString("dd/MM") <br />
                        @Model.matches[i].StartingTime.ToString("hh:mm")
                    </td>
                }
            </tr>

        </tbody>
    </table>
</div>
